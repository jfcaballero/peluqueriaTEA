<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarillo_menos_claro"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/elijoMiPeinado_MiNuevoCorteDePeloPaso2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/elijoMiPeinadoNuevo_Paso2"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/primary_text_light_nodisable"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/elijoMiPeinado_siguienteButton"
        style="@style/ConsejosAtrasSiguienteButton"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/imagebutton_flecha_siguiente"
        android:contentDescription="@string/siguienteButton"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/elijoMiPeinado_atrasButton"
        style="@style/ConsejosAtrasSiguienteButton"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/imagebutton_flecha_atras"
        android:contentDescription="@string/atrasButton"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/elijoMiPeinado_Paso2ImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="32dp"
        android:adjustViewBounds="true"
        android:contentDescription="Avatar chico o chica con peinado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_personaje_peinado_chico_medio_marron" />

    <ImageButton
        android:id="@+id/seleccionColorRubioImageButton"
        style="@style/ElijoMiPeinadoSeleccionButton"
        android:layout_marginStart="180dp"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button_ajustes_chicochica_no_seleccionado"
        android:contentDescription="Seleccion de color del pelo rubio"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/seleccionColorMarronImageButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elijoMiPeinado_Paso2ImageView"
        app:srcCompat="@drawable/ic_peinado_chico_medio_rubio" />

    <ImageButton
        android:id="@+id/seleccionColorMarronImageButton"
        style="@style/ElijoMiPeinadoSeleccionButton"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button_ajustes_chicochica_seleccionado"
        android:contentDescription="Seleccion de color del pelo castaÃ±o"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/seleccionColorNegroImageButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/seleccionColorRubioImageButton"
        app:layout_constraintTop_toBottomOf="@+id/elijoMiPeinado_Paso2ImageView"
        app:srcCompat="@drawable/ic_peinado_chico_medio_marron" />

    <ImageButton
        android:id="@+id/seleccionColorNegroImageButton"
        style="@style/ElijoMiPeinadoSeleccionButton"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button_ajustes_chicochica_no_seleccionado"
        android:contentDescription="Seleccion de color del pelo negro"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/seleccionColorMarronImageButton"
        app:layout_constraintTop_toBottomOf="@+id/elijoMiPeinado_Paso2ImageView"
        app:srcCompat="@drawable/ic_peinado_chico_medio_negro" />

    <TextView
        android:id="@+id/colorRubioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/elijoMiPeinado_RubioButton"
        app:layout_constraintEnd_toEndOf="@+id/seleccionColorRubioImageButton"
        app:layout_constraintStart_toStartOf="@+id/seleccionColorRubioImageButton"
        app:layout_constraintTop_toBottomOf="@+id/seleccionColorRubioImageButton" />

    <TextView
        android:id="@+id/colorMarronTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/elijoMiPeinado_MarronButton"
        app:layout_constraintEnd_toEndOf="@+id/seleccionColorMarronImageButton"
        app:layout_constraintStart_toStartOf="@+id/seleccionColorMarronImageButton"
        app:layout_constraintTop_toBottomOf="@+id/seleccionColorMarronImageButton" />

    <TextView
        android:id="@+id/colorNegroTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/elijoMiPeinado_NegroButton"
        app:layout_constraintEnd_toEndOf="@+id/seleccionColorNegroImageButton"
        app:layout_constraintStart_toStartOf="@+id/seleccionColorNegroImageButton"
        app:layout_constraintTop_toBottomOf="@+id/seleccionColorNegroImageButton" />


</androidx.constraintlayout.widget.ConstraintLayout>