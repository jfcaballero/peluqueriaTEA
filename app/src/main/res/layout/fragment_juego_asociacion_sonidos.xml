<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarillo_menos_claro"
    android:orientation="horizontal"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/juegoAsociacionSonidosTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/juegoAsociacionSonidos_TextView"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/primary_text_light_nodisable"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/juegoAsociacionSonidos_tijerasImageButton"
        style="@style/JuegoAsociacionButton"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:contentDescription="Tijeras"
        android:padding="15dp"

        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/juegoAsociacionSonidos_sprayImageButton"
        app:srcCompat="@drawable/ic_tijeras2" />

    <ImageButton
        android:id="@+id/juegoAsociacionSonidos_secadorImageButton"
        style="@style/JuegoAsociacionButton"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:contentDescription="Secador"
        android:padding="15dp"

        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/juegoAsociacionSonidos_maquinillaElectricaImageButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_secador" />

    <ImageButton
        android:id="@+id/juegoAsociacionSonidos_sprayImageButton"
        style="@style/JuegoAsociacionButton"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:contentDescription="Spray"
        android:padding="20dp"

        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/juegoAsociacionSonidos_tijerasImageButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/juegoAsociacionSonidos_maquinillaElectricaImageButton"
        app:srcCompat="@drawable/ic_spray" />

    <ImageButton
        android:id="@+id/juegoAsociacionSonidos_maquinillaElectricaImageButton"
        style="@style/JuegoAsociacionButton"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:contentDescription="Maquinilla elÃ©ctrica"
        android:padding="15dp"

        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/juegoAsociacionSonidos_sprayImageButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/juegoAsociacionSonidos_secadorImageButton"
        app:srcCompat="@drawable/ic_maquinilla_electrica" />

    <ImageView
        android:id="@+id/juegoAsociacionSonidos_altavozImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"

        android:contentDescription="Altavoz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_altavoz" />


</androidx.constraintlayout.widget.ConstraintLayout>