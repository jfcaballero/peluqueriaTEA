<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarillo_menos_claro"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/seleccionSexoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/ajustes_seleccion_chico_chica"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/primary_text_light_nodisable"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/opcionChicoButton"
        style="@style/AjustesChicoChicaButton"
        android:layout_marginStart="100dp"
        android:layout_marginTop="120dp"
        android:adjustViewBounds="true"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:background="@drawable/button_ajustes_chicochica_no_seleccionado"
        android:contentDescription="@string/ajustes_opcionChicoButton"
        android:scaleType="fitCenter"
        android:text="@string/ajustes_opcionChicoButton"

        app:layout_constraintEnd_toStartOf="@+id/seleccionSexoTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/opcionChicaButton"
        style="@style/AjustesChicoChicaButton"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="100dp"
        android:adjustViewBounds="true"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:background="@drawable/button_ajustes_chicochica_seleccionado"
        android:contentDescription="@string/ajustes_opcionChicoButton"
        android:scaleType="fitCenter"
        android:text="@string/ajustes_opcionChicaButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seleccionSexoTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reiniciarListaAvataresButton"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button_ajustes_chicochica_no_seleccionado"
        android:contentDescription="Reiniciar lista de personajes creados en el modulo 3"
        android:scaleType="fitCenter"
        android:text="@string/ajustes_reiniciarListaAvatares"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seleccionSexoTextView"
        app:layout_constraintVertical_bias="0.518" />


</androidx.constraintlayout.widget.ConstraintLayout>